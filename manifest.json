{
  "manifest_version": 3,
  "name": "ePrint Archive PDF Diff",
  "version": "0.0.2",
  "description": "Compare two PDF versions from eprint.iacr.org archive",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://eprint.iacr.org/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["https://eprint.iacr.org/archive/versions/*"],
      "js": ["pdf-lib.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.min.mjs", "pdf.worker.min.mjs"],
      "matches": ["https://eprint.iacr.org/*"]
    }
  ]
}
